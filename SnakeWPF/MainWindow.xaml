<Window x:Class="SnakeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800"
        KeyDown="MainWindow_OnKeyDown">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="Black">
        
        </Canvas>
        <TextBlock Name="ScoreText" Text="Score: 0" Foreground="White" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button Height="40" Width="100" BorderBrush="White" Background="Black" BorderThickness="5" FontSize="15" FontWeight="Bold" Click="Settings_OnClick" VerticalAlignment="Top" Margin="0 30 0 0">
            <Button.Content >
                <TextBlock Foreground="White">Settings</TextBlock>
            </Button.Content>
        </Button>
        <TextBlock Text="R key - restart" Foreground="White" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="645 10 0 0"/>
        <TextBlock Text="P key - pause" Foreground="White" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="645 30 0 0"/>
    </Grid>
</Window>
